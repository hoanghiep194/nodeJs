<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Chat</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" media="screen" href="/css/style.css" />
  <script src="/js/jquery.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/main.js"></script>
</head>

<body>
  <div id="login-form">
    <div>
      <p>Login</p>
    </div>
    <div>
      <input type="text" id="txtUserName" />
      <input type="button" value="login" id="btnLogin" />
    </div>
  </div>
  <div id="form-chat">
    <div id="right">
      <div>
        <p>Danh Sach Chat</p>
      </div>
      <div id="listAccount"></div>
    </div>
    <div id="left">
      <div id="left-logout">
        Hello
        <span id="txtUserName">aa</span>
        <input type="button" value="logout" id="btnLogout" />
      </div>
      <div id="message">Message</div>
      <div id="inputMessage">
        <div id="info"></div>
        <input type="text" id="txtMessage" />
        <input type="file" value="Image" id="openImage" />
        <input type="button" value="send" id="btnSend" />
      </div>
    </div>
    <div id="room">
      <div id="inputRoom">
        <input type="text" id="txtRoom" />
        <input type="button" value="Create Room" id="btnCreateRoom" /> Room:
        <label id="nameRoom"></label>
      </div>
      <div id="listRoom"></div>
    </div>
  </div>
</body>

</html>
